{
  "name": "@x4-ai/root",
  "version": "0.1.0",
  "private": true,
  "description": "X4 Foundations AI Assistant - Monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/JRichlen/x4-foundations-ai.git"
  },
  "keywords": [
    "x4-foundations",
    "ai",
    "mcp",
    "model-context-protocol",
    "gaming",
    "assistant"
  ],
  "author": "JRichlen",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter './packages/*' run build",
    "dev": "pnpm --filter './packages/*' --parallel run dev",
    "test": "pnpm --filter './packages/*' run test",
    "test:watch": "pnpm --filter './packages/*' run test:watch",
    "typecheck": "pnpm --filter './packages/*' run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "pnpm --filter './packages/*' run clean && rm -rf node_modules",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
